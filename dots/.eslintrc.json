{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": [
        "*.test.js",
        "*.test.jsx"
    ],
    "rules": {
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id"
                ]
            }
        ],
        "jsx-a11y/media-has-caption": 0,
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "import/no-named-as-default": 0
    }
}